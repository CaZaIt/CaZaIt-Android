<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CaZaItAndroid" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cazait_coffee</item>
        <item name="colorPrimaryVariant">@color/cazait_beige</item>
        <item name="colorOnPrimary">@color/cazait_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/cazait_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/cazait_choco</item>

        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>

        <!-- Splash -->
        <item name="android:windowSplashScreenBackground">@color/cazait_base_color_f5</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_cazait_logo</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/cazait_base_color_f5</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
    </style>
</resources>