<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CaZaItAndroid" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cazait_coffee</item>
        <item name="colorPrimaryVariant">@color/cazait_beige</item>
        <item name="colorOnPrimary">@color/cazait_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/cazait_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/cazait_choco</item>

        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Splash -->
    <style name="Theme.CaZaIt.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/cazait_base_color_f5</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/cazait_base_color_f5</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.CaZaItAndroid</item>
    </style>
</resources>
