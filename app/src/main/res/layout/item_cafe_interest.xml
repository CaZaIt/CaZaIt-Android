<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="cafeState"
            type="org.cazait.cazait_android.data.model.CafeState" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="9dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="267dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_cafe_interest_landscape"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/ex_cafe_landscape"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                android:visibility="visible" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/cazait_white">

                <TextView
                    android:id="@+id/tv_cafe_interest_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@{cafeState.name, default=카페}"
                    android:textColor="@color/cazait_black"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_cafe_interest_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@{cafeState.distance + 'm', default=1024}"
                    android:textColor="@color/cazait_black"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_cafe_interest_name"
                    app:layout_constraintStart_toEndOf="@+id/tv_cafe_interest_name" />

                <TextView
                    android:id="@+id/tv_cafe_interest_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@{cafeState.address, default=addressaddressaddress}"
                    android:textColor="@color/cazait_black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_cafe_interest_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_cafe_interest_name" />

                <TextView
                    android:id="@+id/tv_interest_state"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="19dp"
                    android:background="@drawable/round_latte_beige_rectangle"
                    android:contentDescription="@null"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:minHeight="38dp"
                    android:text="@{cafeState.state, default=보통}"
                    android:textAlignment="center"
                    android:textColor="@color/cafe_list_item_normal"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_cafe_interest_address" />


                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/btn_cafe_interest_favorite"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="41dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/selector_interest_checkbox"
                    android:button="@android:color/transparent"
                    android:contentDescription="@null"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_cafe_interest_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_cafe_interest_distance"
                    app:layout_constraintTop_toTopOf="@+id/tv_cafe_interest_name" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>